<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:layout_margin="7dp"
        android:orientation="horizontal"
        android:padding="7dp">


        <ImageView
            android:id="@+id/avatarum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            app:srcCompat="@drawable/avatarseis" />

        <ImageView
            android:id="@+id/avatartres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="7dp"
            app:srcCompat="@drawable/avatarcinco" />

        <ImageView
            android:id="@+id/avatarquatro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="7dp"
            app:srcCompat="@drawable/avatarsete" />
    </LinearLayout>
    <!--Fim linha um-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:layout_margin="7dp"
        android:orientation="horizontal"
        android:padding="7dp">


        <ImageView
            android:id="@+id/avatarcinco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="7dp"
            app:srcCompat="@drawable/avatartres" />

        <ImageView
            android:id="@+id/avatarseis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="7dp"
            app:srcCompat="@drawable/avatarzero" />

        <ImageView
            android:id="@+id/avatarsete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="7dp"
            app:srcCompat="@drawable/avatarum" />
    </LinearLayout>
    <!--Fim linha dois-->


</LinearLayout>
<!--Fim principal-->